{
  "name": "auth-backend",
  "version": "1.0.0",
  "description": "Simple Express backend for login with PostgreSQL",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "dev:local": "nodemon index.js --local",
    "prod": "node index.js --prod",
    "test": "node index.js",
    "config:list": "node -e \"console.log('Available configs:', require('./config/config-manager').listAvailableConfigs())\"",
    "config:validate": "node -e \"require('./config/config-manager').loadConfig(); require('./config/config-manager').validateConfig()\""
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.11.1"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "nodemon": "^2.0.22"
  }
}
